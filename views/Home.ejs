<!DOCTYPE html>
<html>
<head>
    <title><%= pageTitle %><%= pageTitle %></title>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
    margin: 0;
    padding: 0;
}

.container {
    width: 80%;
    margin: auto;
    overflow: hidden;
}

header {
    background: #50b3a2;
    color: white;
    padding-top: 30px;
    min-height: 70px;
    border-bottom: #e8491d 3px solid;
}

header a {
    color: #ffffff;
    text-decoration: none;
    text-transform: uppercase;
    font-size: 16px;
}

header ul {
    padding: 0;
    list-style: none;
    text-align: center;
}

header li {
    display: inline;
    margin: 0 20px;
}

header a:hover {
    color: #e8491d;
}

h1 {
    font-size: 40px;
    margin-top: 0;
}

.content {
    padding: 20px;
}

/* 更多自定义样式可以在这里添加 */

.hidden {
    display: none;
}

.animation-start-state {
    transition: transform 0.3s ease;
}

.animation-end-state {
    transform: scale(1.1);
}

button {
    background-color: #e8491d;
    color: white;
    padding: 10px 20px;
    border: none;
    cursor: pointer;
}

button:hover {
    background-color: #ff6347;
}

    </style>
</head>
<body>
    <header>
        <div class="container">
            <h1><%= pageTitle %></h1>
            <nav>
                <ul>
                    <% navigation.forEach(item => { %>
                        <li><a href="<%= item.link %>"><%= item.text %></a></li>
                    <% }); %>
                </ul>
            </nav>
        </div>
    </header>
    <div class="content">
        <p>Welcome to the Inventory Management System</p>
        <!-- 更多页面内容可以在这里添加 -->
        <div>
            <h2>Latest Inventory Items</h2>
            <ul>
                <% inventoryItems.forEach(item => { %>
                    <li><%= item.name %>: <%= item.quantity %> items</li>
                <% }); %>
            </ul>
        </div>
        <div>
            <h2>Announcements</h2>
            <p>Check out our latest announcements and updates.</p>
        </div>
        <div>
            <h2>Contact Us</h2>
            <p>If you have any questions, feel free to <a href="/contact">contact us</a>.</p>
        </div>
    </div>
    <footer>
        <p>&copy; <%= new Date().getFullYear() %> Inventory Management System</p>
    </footer>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const toggleButton = document.getElementById('toggleButton');
            const toggleContent = document.getElementById('toggleContent');

            toggleButton.addEventListener('click', function() {
                toggleContent.classList.toggle('hidden');
            });

            const animatedElement = document.getElementById('animatedElement');

            animatedElement.addEventListener('mouseenter', function() {
                animatedElement.classList.add('animation-end-state');
            });

            animatedElement.addEventListener('mouseleave', function() {
                animatedElement.classList.remove('animation-end-state');
            });
        });
    </script>
</body>
</html>

